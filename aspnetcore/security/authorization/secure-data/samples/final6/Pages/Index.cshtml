@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background-color: #68217A; /* Visual Studio color */
        font-family: Century Gothic, Arial, sans-serif;
        color: #ffffff; /* White font color */
    }

    .members-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .member-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px;
        max-width: 200px; /* Set a maximum width for the member container */
    }

    .member-image {
        width: 100px;
        height: 100px;
        border-radius: 50%; /* Make the image round */
        margin-bottom: 10px;
    }

    .member-info {
        text-align: center;
    }

        .member-info h2 {
            font-size: 18px; /* Font size for the members' names */
        }

        .member-info p {
            color: #FFC0CB; /* Change the color of the role text to pink (#FFC0CB) */
        }

    /* Override link color */
    a {
        color: #999999; /* White link color */
    }

    h1.display-4 {
        color: #ffffff; /* White link color */
    }

    /* Adjust the size and alignment of "OUR TEAM" title */
    .team-title {
        font-size: 20px; /* Change the font size of the title to 18px */
        text-align: left; /* Align the title to the left */
        margin-bottom: 20px; /* Add margin to create space between title and members */
    }
</style>

<div class="text-center">
    <img src="/image/Geg.png" class="member-image"> <!-- Show the Geg.png image as the logo -->

    <h1 class="display-4" style="color: #ffffff;">Welcome</h1>
    <p>
        Final Project BDAT 1001: <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
    </p>
    <p>User Data Protected by Authorization</p>
</div>

<div class="team-title">OUR TEAM</div> <!-- Add the title "OUR TEAM" with class "team-title" -->

